# Screen rc by Joris Hartog

# Escape with semi-colon instead of ^A
escape ;;

# Add more serious rollback buffer
defscrollback 10000

# Make sure the standard shell is used
shell -$SHELL

# Enable mouse interaction
mousetrack on

# Do not display the copyright page
startup_message off

# Enable altscreen to cleanly close vim or less
altscreen on

# 256 colors
term xterm-256color

# Handy statusbar
hardstatus alwayslastline '%{= G}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}][ %{K}%`%{g} ][ %{B}%Y-%m-%d %{W}%c:%s %{g}]'
backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*"'

# Keybinds
bind x remove
bind f split -v
bind h focus left
bind l focus right
bind k focus up
bind j focus down
